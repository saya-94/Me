<div class="container">

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="form-body">
    <h2>ログイン</h2>
      <div class="form-body-end-user">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group-sign-in">
            <%= f.email_field :email, autofocus: true, class:"form-control login", autocomplete: "email", placeholder: "メールアドレス" %>
          </div>

          <div class="form-group-sign-in">
            <%= f.password_field :password, class:"form-control login", autocomplete: "off",placeholder: "パスワード" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="check-box">
              <div class="check-box-end-user">
                <%= f.check_box :remember_me %>
                <%= f.label :次回より入力を省略 %>
              </div>
            </div>
          <% end %>

          <div class="btn">
            <%= f.submit "ログイン", class:"btn btn-primary btn-block" %>
          </div>
        <% end %>
        <div class="link"><%= link_to "新規登録", new_end_user_registration_path, class: "forgot-pass" %></div>
        <div class="link"><%= link_to "パスワードを忘れた", new_end_user_password_path, class: "forgot-pass" %></div>
      </div>
    </div>
  </div>
</div>
</div>
