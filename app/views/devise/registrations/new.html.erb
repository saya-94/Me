<%= render 'common_template/header' %>

  <div class="container">
      <div class="row">
        <div class="col-md-5 col-md-offset-4">
              <h2>新規登録</h2>
                <div class="box">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                  <div class="row form-group">
                    <div class="item-form"><%= f.label :ユーザー名 %>
                    <em>※必須項目</em></div>
                    <div class="col-md-10"><%= f.text_field :name, :size=>"25", autofocus: true, class:"form-control", placeholder:"ユーザー名" %></div>
                  </div>

                  <div class="row form-group">
                    <div class="item-form"><%= f.label :性別 %>
                    <em>※必須項目</em></div>
                    <div class="col-md-10"><%= f.select :sex, ['WOMAN', 'MAN', 'KIDS'], :prompt => "選択してください", class: 'form-control' %></div>
                  </div>

                  <div class="row form-group">
                    <div class="item-form"><%= f.label :メールアドレス %><em>※必須項目</em></div>
                    <div class="col-md-10"><%= f.email_field :email, class:"form-control" %></div>
                  </div>

                  <div class="row form-group">
                    <div class="item-form"><%= f.label :パスワード %><em>※必須項目</em></div>
                    <div class="col-md-10"><%= f.password_field :password, class:"form-control", placeholder:"英数字6文字以上" %></div>
                  </div>

                  <div class="row form-group">
                    <div class="item-form"><%= f.label :パスワード再確認用 %><em>※必須項目</em></div>
                    <div class="col-md-10"><%= f.password_field :password_confirmation, class:"form-control", placeholder:"英数字6文字以上" %></div>
                  </div>

                  <div class="row form-group">
                    <div class="item-form"><%= f.label :年齢 %></div>
                    <div class="col-md-10"><%= f.select :age, (0..120).to_a.unshift("未回答"), class: 'form-control' %>歳</div>
                  </div>

                  <div class="row form-group">
                    <div class="item-form"><%= f.label :身長 %></div>
                    <div class="col-md-10"><%= f.select :height, (30..250).to_a.unshift("未回答"), class: 'form-control' %>cm</div>
                  </div>

                  <div class="text-center">
                    <div class="col-md-10"><%= f.submit "会員登録する", class:"btn btn-primary btn-lg" %></div>
                  </div>
                <% end %>

              </div>
        </div>
      </div>
  </div>

<%= render 'common_template/footer' %>