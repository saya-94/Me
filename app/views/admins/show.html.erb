<%= render 'common_template/admin_header' %>

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h2>ユーザー詳細</h2>

            <%# 論理削除済ユーザーは「削除済」の表示を %>
            <h3 class = "red-text"><%= @end_user.deleted_at ? "削除済" : nil  %></h3>

            <div class="box">
                <div class="row form-box-show">
                    <div class="col-xs-4"><label>ユーザー名</label></div>
                    <div class="col-xs-8"><%= @end_user.name %></div>
                </div>
                <div class="row form-box-show">
                    <div class="col-xs-4"><label>性別</label></div>
                    <div class="col-xs-8"><%= @end_user.sex %></div>
                </div>
                <div class="row form-box-show">
                    <div class="col-xs-4"><label>年齢</label></div>
                    <%# 年齢が -1 だったら、未回答と表示 %>
                <% if @end_user.age == -1 %>
                        <div class="col-xs-8"><%= '未回答' %></div>
                <% else %>
                        <div class="col-xs-8"><%= @end_user.age %> 歳</div>
                <% end %>
                </div>
                <div class="row form-box-show">
                    <div class="col-xs-4"><label>身長</label></div>
                    <%# 身長が -1 だったら、未回答と表示 %>
                <% if @end_user.height == -1 %>
                        <div class="col-xs-8"><%= '未回答' %></div>
                <% else %>
                        <div class="col-xs-8"><%= @end_user.height %> cm</div>
                <% end %>
                </div>
                <div class="row form-box-show">
                    <div class="col-xs-4"><label>自己紹介文</label></div>
                    <div class="col-xs-8"><%= @end_user.introduction %></div>
                </div>
                <div class="row form-box-show">
                    <div class="col-xs-4"><label>メールアドレス</label></div>
                    <div class="col-xs-8"><%= @end_user.email %></div>
                </div>
                <div class="row form-box-show">
                    <div class="col-xs-4"><label>フォロー数/フォロワー数</label></div>
                    <div class="col-xs-8">9999999999/9999999999<%=  %></div>
                </div>
                <div class="row form-box-show">
                    <div class="col-xs-4"><label>投稿数</label></div>
                    <div class="col-xs-8">999999999999<%=  %></div>
                </div>

                
                    <div class="row form-box-show">
                        <div class="col-xs-6">
                            <div class="link"><%= link_to "戻る", admins_path , class: "btn btn-primary pull-left≈"%></div>
                        </div>
                        <div class="col-xs-6">

                            <%# 論理削除済ユーザーは「退会」ボタンの表示を %>
                            <% if @end_user.deleted_at.blank? %>
                            <%= link_to "退会", destroy_users_admin_path, method: :delete , class: "btn btn-danger pull-right", data: { confirm: "本当に退会させますか？"}%>
                            <% end %>
                        </div>
                    </div>


            </div>
        </div>
    </div>
</div>

<%= render 'common_template/footer' %>