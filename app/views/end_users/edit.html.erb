<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2 class="title">プロフィール編集</h2>

                <%= form_for(@end_user) do |f| %>

                <div class="row form-group">
                    <div class="item-form"><%= f.label :プロフィール画像 %></div>
                    <%= f.attachment_field :profile_image %>
                </div>

                <div class="row form-group">
                    <div class="item-form"><%= f.label :ユーザー名 %></div>
                    <div class="col-md-10"><%= f.text_field :name, autofocus: true, autocomplete: "off", class: "form-control" %></div>
                </div>

                <div class="row form-group">
                    <div class="item-form"><%= f.label :性別 %></div>
                    <div class="col-md-10"><%= f.select :sex, ['WOMAN', 'MAN', 'KIDS'], :prompt => "選択してください", class: 'form-control' %></div>
                </div>

                <div class="row form-group">
                    <div class="item-form"><%= f.label :身長 %></div>
                    <div class="col-md-10"><%= f.select :height, (30..250).to_a.unshift("未回答"), class: 'form-control' %>cm</div>
                </div>

                <div class="row form-group">
                    <div class="item-form"><%= f.label :年齢 %></div>
                    <div class="col-md-10"><%= f.select :age, (0..120).to_a.unshift("未回答"), class: 'form-control' %>歳</div>
                </div>

                <div class="row form-group">
                    <div class="item-form"><%= f.label :自己紹介 %></div>
                    <div class="col-md-10"><%= f.text_field :introduction, autofocus: true, autocomplete: "off" ,class: "form-control" %></div>
                </div>

                <%= f.submit "変更する", class: "btn btn-default" %>

                <% end %>



            <div class="link"><%= link_to "戻る", end_user_path(@end_user.id) %></div>

        </div>
    </div>
</div>