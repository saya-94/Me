<%= render 'common_template/header' %>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>パスワード変更画面</h2>

            <%= form_for @end_user, url: {:controller => :end_users, :action=>:password_update} do |f| %>
            <%= f.hidden_field :reset_password_token %>

                <div class="form-group">
                    <%= f.label :新しいパスワード %><br />
                    <%= f.password_field :password, class:"form-control", autocomplete: "new-password", placeholder:"英数字6文字以上" %>
                    <% if @minimum_password_length %>
                        <br />
                        <em><%= @minimum_password_length %> characters minimum</em>
                    <% end %>
                </div>

                <div class="form-group">
                    <%= f.label :新しいパスワード再確認用 %><br />
                    <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password", placeholder:"英数字6文字以上" %>
                </div>

                <div class="form-group">
                    <%= f.label :現在のパスワード %> <i>(変更をするには現在のパスワードが必要)</i><br />
                    <%= f.password_field :current_password, class:"form-control", autocomplete: "current-password", placeholder:"英数字6文字以上" %>
                </div>

                <div class="actions">
                    <%= f.submit "パスワードを変更する", class:"btn btn-default" %>
                </div>
            <% end %>
            <div class="row"><%= link_to "戻る", end_user_path(current_end_user) %></div>
        </div>
    </div>
</div>

<%= render 'common_template/footer' %>