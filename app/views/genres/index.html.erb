<%= render 'common_template/admin_header' %>

<div class="container">
    <div class="row">

    <%# サイドメニュー & genre追加form ここから %>
        <div class="col-md-3">
            <%= render 'common_template/admin_box' %>
            <%= render 'common_template/add_genre' %>
        </div>
    <%# サイドメニュー & genre追加form ここまで %>

        <div class="col-md-6 col-md-offset-1">
            <h2>ジャンル一覧</h2>

<table class="table table-striped table-responsive">
            <thead>
                <tr>
                <th><strong>ジャンル名</strong></th>
                <th></th>
                </tr>
            </thead>
            <tbody>
                <% @genres.each do |f| %>
                <tr>
                    <td><%= f.genre %></td>
                    <td class="text-center"><%= link_to "詳細", genre_path(f.id), class: 'btn btn-primary btn-sm' %></td>
                </tr>
                <% end %>
                
            </tbody>
            </table>
            <%= paginate @genres, class: "paginate" %>
        </div>
        <%# <div class="col-md-2"></div> %>
    </div>
</div>

<%= render 'common_template/footer' %>