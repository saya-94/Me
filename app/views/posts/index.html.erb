<%= render 'common_template/header' %>


<div class="container">
    <div class="row">
        <%# <div class="col-md-1"></div> %>
        <div class="col-md-12">

            <%# 「MAN」「WOMAN」「KIDS」の選択　タブ %>
            <div class="row">
                <div class="col-md-12">
                    <ui class="tab-group">
                        <li class="tab is-active">WOMAN</li>
                        <li class="tab">MAN</li>
                        <li class="tab">KIDS</li>
                    </ui>
                </div>
            </div>

            <%# WOMANの画像一覧 %>
            <div class="panel-group">

                <div class="panel is-show">
                    <% @post_w.each do |post| %>

                        <div class="image-box">
                            <%= link_to post_path(post.id), class: "post-link" do %>
                                <%= attachment_image_tag post, :image, class: "post-image" %>
                            <% end %>
                        </div>
                    <% end %>
                </div>

            <%# MANの画像一覧 %>
                <div class="panel">
                    <% @post_m.each do |post| %>

                        <div class="image-box">
                            <%= link_to post_path(post.id), class: "post-link" do %>
                                <%= attachment_image_tag post, :image, class: "post-image" %>
                            <% end %>
                        </div>
                    <% end %>
                </div>

            <%# KIDSの画像一覧 %>
                <div class="panel">
                    <% @post_k.each do |post| %>

                        <div class="image-box">
                            <%= link_to post_path(post.id), class: "post-link" do %>
                                <%= attachment_image_tag post, :image, class: "post-image" %>
                            <% end %>
                        </div>
                    <% end %>
                </div>

            </div>

        </div>
        <%# <div class="col-md-1"></div> %>
    </div>
</div>

<%= render 'common_template/footer' %>