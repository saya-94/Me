<%# Font Awesome %>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">

            <%# 投稿ページ %>
            <h2 class="page-title">投稿フォーム</h2>

            <%= form_for(@post) do |f| %>

            <div class="form-group">
                <div class="item-form"><%= f.label :画像 %>
                <em>必須項目</em></div>
                <%= f.attachment_field :image %>
            </div>

            <div class="form-group">
                <div class="item-form"><%= f.label :本文 %></div>
                <%= f.text_area :comment %>
            </div>

            <div class="form-group">
                <div class="item-form"><%= f.label :スタイルを選択してください %>
                <em>必須項目</em></div>
                <%= f.select :style, ['Pants style', 'Skirt style'], :prompt => "選択してください", class: 'form-control' %>
            </div>

            <div class="form-group">
                <div class="item-form"><%= f.label :ジャンルを選択してください %>
                <em>必須項目</em></div>
                <%= f.select :genre, Genre.genres.keys,:prompt => "選択してください" %>
            </div>

            <div class="form-group">
                <div class="item-form"><%= f.label :コーデの性別 %>
                <em>※必須項目</em></div>
                <%= f.select :sex_post, Post.sex_posts.keys, :prompt => "選択してください", class: 'form-control' %>
            </div>

            <div class="text-center">
                <div class="col-md-10"><%= f.submit "投稿する", class:"btn btn-primary btn-lg" %></div>
            </div>

                <% end %>

            </div>

        <div class="col-md-2"></div>


        </div>
    </div>
</div>