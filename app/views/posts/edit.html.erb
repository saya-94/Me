<%= render 'common_template/header' %>

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">

        <h2>編集</h2>

            <%= form_for(@post) do |post| %>

            <div class="form-group">
                <div class="item-form"><%= post.label :本文 %></div>
                <%= post.text_area :comment %>
            </div>

            <div class="form-group">
                <div class="item-form"><%= post.label :スタイル %>
                <em>必須項目</em></div>
                <%= post.select :style_id, Post.styles.keys, :prompt => "選択してください", class: 'form-control' %>
            </div>

            <div class="form-group">
                <div class="item-form"><%= post.label :ジャンル %>
                <em>必須項目</em></div>
                <%= post.collection_select :genre_id,Genre.all.order('genre'), :id, :genre, {:prompt => "選択してください"}, {class: "form-control genre"} %>
            </div>

            <div class="form-group">
                <div class="item-form"><%= post.label :コーデの性別 %>
                <em>※必須項目</em></div>
                <%= post.select :sex_post, Post.sex_posts.keys, :prompt => "選択してください", class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= post.submit "更新", class: "btn btn-default" %>
            </div>

            <% end %>

                <%= link_to "戻る", post_path(@post.id) %>
        </div>
    </div>
</div>

