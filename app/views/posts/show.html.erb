<%= render 'common_template/header' %>


<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">

            <div class="row">
                <%= link_to end_user_path(current_end_user), class: "post-link" do %>
                <div class="col-md-8 post-show-prfl-img">
                    <%= attachment_image_tag @post.end_user, :profile_image, format: 'jpeg', fallback: "人物アイコン.jpg", size: "70x70",class: "img" ,id: "show-icon" %>
                </div>
                <div class="col-md-4 post-show-prfl-img">
                    <span class="show-user-name"><%= @post.end_user.name %></span>
                </div>
                <% end %>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <%= attachment_image_tag @post, :image ,class: "show-post-img"%>
                </div>
            </div>

            <%# いいね＆ブックマーク %>
            <div class="row">
                <div class="col-md-12 text-left like-bkm" >

                    <%# 「MissingTemplate」のエラーが出て部分テンプレートできなかった〜。謎。悔しい。 %>
                    <%# <%= render 'common_template/like' %>
                    <% if @post.favorited_by?(current_end_user) %>
                    <span>
                        <%= link_to post_likes_path(@post), method: :delete do %>
                        <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                        <%= @post.likes.count %> いいね
                        <% end %>
                    </span>
                    <% else %>
                    <span>
                        <%= link_to post_likes_path(@post), method: :post do %>
                        <i class="far fa-heart" aria-hidden="true"></i>
                        <%= @post.likes.count %> いいね
                        <% end %>
                    </span>
                    <% end %>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 post-show-comment">
                    <div class="comment-box">
                        <%= @post.comment %>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-md-12 text-right post-show-btn" >
                    <%= link_to "Edit", edit_post_path(@post.id), class: 'btn btn-default btn-sm' %>
                    |
                    <%= link_to "Destroy", post_path(@post.id), method: :delete, "data-confirm" => "削除してよろしいですか？", class: 'btn btn-default btn-sm' %>
                </div>
            </div>

        </div>
        <div class="col-md-2"></div>
    </div>
</div>

<%= render 'common_template/footer' %>